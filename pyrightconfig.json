{
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "**/__pycache__",
    "**/node_modules",
    ".venv",
    "build",
    "dist"
  ],
  "typeCheckingMode": "strict",
  "reportUnknownMemberType": "warning",
  "reportUnknownVariableType": "warning",
  "reportMissingTypeStubs": "none",
  "pythonVersion": "3.10",
  "pythonPlatform": "Darwin",
  "strict": [
    "src/txt2tex"
  ],
  "executionEnvironments": [
    {
      "root": "tests",
      "reportPrivateUsage": "none"
    },
    {
      "root": "src"
    }
  ]
}
